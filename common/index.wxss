.navigator-box {
  opacity: 0;
  position: relative;
  background-color: #FFFFFF;
  line-height: 1.41176471;
  font-size: 34rpx;

  transform: translateY(-50%);
  transition: .3s;
}
.navigator-box-show {
  opacity: 1;
  transform: translateY(0);
}
.navigator {
  padding: 20rpx 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}
.navigator:before {
  content: " ";
  position: absolute;
  left: 30rpx;
  top: 0;
  right: 30rpx;
  height: 1px;
  border-top: 1rpx solid #D8D8D8;
  color: #D8D8D8;
}
.navigator:first-child:before {
  display: none;
}
.navigator-text {
  flex: 1;
}
.navigator-arrow {
  padding-right: 26rpx;
  position: relative;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}


.kind-list {
  background-color:#D8D8D8;
  border-radius: 15rpx;
  flex-direction:row;
  justify-content: space-between;
}

.kind-list-item {
  overflow: hidden;
  display:flex;
  align-items:'center';
  flex:1;
  padding-bottom: 30rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  flex-direction:row;
  justify-content: space-around;
}

.kind-list-item-header {
  height: 100rpx;
  display:flex;
  align-items:'center';
  flex:1;
  padding: 30rpx;
  flex-direction:row;
  justify-content: space-around;
}

.kind-list-item-foot {
  flex-direction:column;
  display: flex;
  justify-content: center;
  align-items: center;
}

.kind-list-item:first-child {
  margin-top: 0;
}
.kind-list-img {
  width: 40rpx;
  height: 40rpx;
  
}

.kind-list-img-header {
